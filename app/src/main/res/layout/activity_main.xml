<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/mainHLayout">
        <LinearLayout
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:id="@+id/mainVLayout"
                android:layout_weight="1" android:layout_width="wrap_content">
            <Button
                    android:text="American"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/startAmericanBtn"
                    android:onClick="onMenuBtnClick"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_height="match_parent" android:id="@+id/mainVLayout2"
                android:layout_weight="1" android:layout_width="wrap_content">
            <Button
                    android:text="Asian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/startAsianBtn"
                    android:onClick="onMenuBtnClick"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>